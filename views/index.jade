extends layout

block content
  h1= title
  div(class="inline", style="display:inline-block; vertical-align:text-top")
    div(class="goals", style="display:inline-block; vertical-align:text-top")
      h2 Today's Reminders
      h2 Goals
      form(id="cancel", action='/intermediate', method='get')
        input(class="btn btn-primary", type='submit', value='Add a Goal')
    div(class="calendar", style="display:inline-block; vertical-align:text-top; margin-left: 100px")
      h2 Calendar
      button(id="calendar", class="btn btn-primary", type='newtask') Calendar