extends layout

block content
  h1= title
  p Make a new goal!
  
  p Goal
  input(type='text', name='Goal')  
  br
  p Description
  input(type='text', name='Description') Description
  br
  p Task
  input(type='text', name='Task') 
  button(type='newtask') Add a new task
  br
  p Duration
  input(type='text', name='Duration')
  br
  p Daily Activities
  input(type='text', name='Daily')
  br
  p Start Date
  select(name='startdateday') 
    option(value='1') 1
      option(value='2') 2
      option(value='3') 3
      option(value='4') 4
  select(name='startdatemonth') 
    option(value='jan') jan
      option(value='feb') feb
      option(value='mar') mar
      option(value='apr') apr   
  select(name='startdateyear') 
    option(value='jan') 2013
      option(value='feb') 2014
      option(value='mar') 2015
   br
   br
   p End Date
  br
  select(name='enddateday') 
     option(value='1') 1
      option(value='2') 2
      option(value='3') 3
      option(value='4') 4
  select(name='enddatemonth') 
    option(value='jan') jan
      option(value='feb') feb
      option(value='mar') mar
      option(value='apr') apr   
  select(name='enddateyear') 
    option(value='jan') 2013
      option(value='feb') 2014
      option(value='mar') 2015
  br
  input(type='submit', value='submit')
      

